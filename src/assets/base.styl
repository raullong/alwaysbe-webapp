*
  box-sizing: border-box

html
  font-size calc(100vw / 3.2)

body, input, select
  color: #555
  font-size .14rem
  font-family "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif

body
  margin 0
  padding 0
  background-color #f0f0f0

.weui-dialog
  top: 40%
  .weui-cells
    margin: 0
  .weui-cell
    display: block
    text-align: left
    &:before
      left: 0
  .weui-cell__ft
    font-size: .13rem
    padding-top: .08rem
    text-align: left

.note-wrapper
  padding: .08rem .16rem
  blockquote
    background-color: rgba(33, 150, 243, 0.2)
    border-left: 3px solid rgba(33, 150, 243, 0.7)
    border-right: 3px solid rgba(33, 150, 243, 0.7)
    padding: .02rem .08rem
    text-align: center
    margin-bottom: .16rem
    p
      font-size: .12rem
  p
    margin: .12rem 0
    font-size: .13rem
    line-height: 1.8em
  h1, h2, h3, h4, h5, h6
    margin: .08rem 0 .16rem
    text-align: center
    color: #2196f3
  ol
    padding-left: .16rem
